{
    "description": "A Slim Framework implementation of the real world project",
    "homepage": "http://github.com/silentworks/realworld-slim",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Smith",
            "email": "a.smith@silentworks.co.uk",
            "homepage": "https://www.donielsmith.com/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.8",
        "monolog/monolog": "^1.21",
        "illuminate/database": "^5.4",
        "vlucas/phpdotenv": "^2.4",
        "robmorgan/phinx": "^0.8.1",
        "tuupola/slim-jwt-auth": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Conduit\\": "src/Conduit/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
